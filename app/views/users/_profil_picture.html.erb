<% if user.avatar.attached? %>
  <img src="<%= url_for(user.avatar)%>" width="80" height="80">
<% elsif user.picture_link? %>
  <img src="<%= user.picture_link %>" width="80" height="80">
<% elsif gravatar? user.email%>
  <%= gravatar_for user, size: 50 %>
<% else %>
  <img src="<%= asset_path('default-avatar.png')%>" width="80" height="80">
<% end %>